{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "types": ["react", "react-dom", "anotherAwesomeDependency"],
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
